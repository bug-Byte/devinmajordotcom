@model devinmajordotcom.ViewModels.MediaDashboardViewModel
@{

}

@using (Ajax.BeginForm("../MediaDashboard/_ManageMediaDashboard", new { }, new AjaxOptions { HttpMethod = "Post", OnSuccess = "MailSuccess(data)", OnFailure = "MailFailure(data)" }, new { @id = "updateMediaDashboardForm" }))
{
    var count = 0;
    foreach (var link in Model.SidebarLinks)
    {
        @Html.HiddenFor(x => x.SidebarLinks[count].ID)
        <div class="row">
            <div class="col-md-6">
                @Html.LabelFor(x => x.SidebarLinks[count].DisplayName)
            </div>
            <div class="col-md-6">
                @Html.TextBoxFor(x => x.SidebarLinks[count].DisplayName)
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                @Html.ValidationMessageFor(x => x.SidebarLinks[count].DisplayName)
            </div>
        </div>
        <br />
        count++;
    }

    <div class="row">
        <div class="col-sm-offset-2 col-sm-8">
            <input class="form-control" id="updateMediaDashboard" type="submit" value="Update Professional Portfolio">
        </div>
    </div>

}
