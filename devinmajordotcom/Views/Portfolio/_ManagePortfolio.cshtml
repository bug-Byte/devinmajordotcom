@model devinmajordotcom.ViewModels.PortfolioViewModel
@{ 
    var contactLinkCount = 0;
    Model.ContactSiteLinks = Model.ContactSiteLinks.OrderBy(x => x.Order).ToList();

}

@using (Ajax.BeginForm("_ManagePortfolio", "Portfolio", new AjaxOptions { HttpMethod = "Post",  OnSuccess = "AjaxSuccess(data)", OnFailure = "AjaxFailure(data)" }))
{
    <div class="panel-group">
    
        @Html.Partial("../Portfolio/_ManageSplashScreen", Model)

        <br/>

        @Html.Partial("../Portfolio/_ManageProfile", Model)
        
        <br/>

        @Html.Partial("../Portfolio/_ManageSkills", Model)
        
        <br />

        @Html.Partial("../Portfolio/_ManageProjects", Model)
        
        @*<br/>
        
        @Html.Partial("_ManageCareerAndAcademics", Model)*@
        
        <br/>
        
        @Html.Partial("../Portfolio/_ManageLinks", Model)
    
    </div>

    <br />

    <div class="row">
        <div class="col-sm-offset-2 col-sm-8">
            <input class="form-control btn btn-success" id="updatePortfolio" type="submit" value="Update Professional Portfolio">
        </div>
    </div>

}
