                            @Html.LabelFor(x => x.SplashScreenDetails.PositionTitle)
                        </div>
                        <div class="col-sm-12">
                            @Html.TextBoxFor(x => x.SplashScreenDetails.PositionTitle, new { @class = "form-control" })
                        </div>
                    </div>
