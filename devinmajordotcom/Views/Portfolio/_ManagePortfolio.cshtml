@model devinmajordotcom.ViewModels.PortfolioViewModel
@{ 

}

@using (Ajax.BeginForm("_ManagePortfolio", "Portfolio", null, new AjaxOptions { HttpMethod = "Post", OnSuccess = "MailSuccess(data)", OnFailure = "MailFailure(data)" }, new { @id = "updatePortfolioForm" }))
{

    <div class="row">
        <div class="col-sm-6">
            @Html.LabelFor(x => x.SplashScreenDetails.FirstName)
        </div>
        <div class="col-sm-6">
            @Html.TextBoxFor(x => x.SplashScreenDetails.FirstName, new { @class="form-control" })
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            @Html.ValidationMessageFor(x => x.SplashScreenDetails.FirstName)
        </div>
    </div>

    <br />

    <div class="row">
        <div class="col-sm-6">
            @Html.LabelFor(x => x.SplashScreenDetails.LastName)
        </div>
        <div class="col-sm-6">
            @Html.TextBoxFor(x => x.SplashScreenDetails.LastName, new { @class = "form-control" })
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            @Html.ValidationMessageFor(x => x.SplashScreenDetails.LastName)
        </div>
    </div>

    <br />

    <div class="row">
        <div class="col-sm-offset-2 col-sm-8">
            <input class="form-control" id="updatePortfolio" type="submit" value="Update Professional Portfolio">
        </div>
    </div>

}