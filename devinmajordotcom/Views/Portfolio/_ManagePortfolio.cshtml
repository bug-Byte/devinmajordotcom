                        <div class="col-sm-12">
                            @Html.ValidationMessageFor(x => x.ProfileDetails.Address)
                        </div>
                    </div>

                    <br />

                    <div class="row">
                        <div class="col-sm-6">
                            @Html.LabelFor(x => x.ProfileDetails.PhoneNumber)
                        </div>
                        <div class="col-sm-6">
                            @Html.TextBoxFor(x => x.ProfileDetails.PhoneNumber, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="row">
