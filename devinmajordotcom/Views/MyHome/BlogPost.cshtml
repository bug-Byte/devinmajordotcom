@using devinmajordotcom.ViewModels
@model BlogPostViewModel
@{
    Layout = "../Shared/BlogLayout.cshtml";
}

<div class="container">
    
    <div class="row">
        
        <div class="col-lg-12">
            <h1 class="mt-4">@Model.PostTitle</h1>
            <p class="lead">
                Authored by:
                <a href="#">@Model.AuthorUserName</a>
            </p>
            <hr />
            <p><i class="fa fa-clock-o"></i>&nbsp;&nbsp;Posted on @Model.CreatedOn</p>
            @if (Model.ModifiedOn != Model.CreatedOn)
            {
                <p><i class="fa fa-clock-o"></i>&nbsp;&nbsp;Last edited on @Model.ModifiedOn</p>
            }
            <hr />
        </div>

        <div class="col-lg-12">
            <div class="blog-image">
                <img src="@String.Format("data:image/jpg;base64,{0}", Convert.ToBase64String(Model.Image))" class="img-responsive img-fluid rounded" alt="Blog Post Image">
            </div>
        </div>

        <div class="col-lg-12">       
            <hr />    
            @Html.Raw(Model.Body)   
            <hr />         
        </div>

    </div>

