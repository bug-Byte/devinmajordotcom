<!-- HOME -->
<section id="home" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container" style="">
        <div class="row">
            
            <div class="col-sm-12 text-center">
                <h2>Welcome Home, Devin!</h2>
            </div>
            <div class="col-sm-12 text-center">
                It is currently 2:40PM, on Saturday December 12th, 2017.
            </div>

        </div>

        <div id="spacerDiv" style="min-height: 65vh;"></div>

        <div class="row" style="">
