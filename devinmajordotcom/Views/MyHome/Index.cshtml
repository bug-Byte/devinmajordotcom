            </div>
        </div>

    </div>
</section>

<!-- WORK -->
<section id="work" data-stellar-background-ratio="0.5">
    <div class="container">
        <div class="row">

            <div class="col-md-12 col-sm-12">
                <div class="section-title">
                    <h2>My Favorites & Bookmarks</h2>
                    <span class="line-bar">...</span>
                </div>
            </div>
            
            @foreach (var link in Model.FavoritesAndBookmarks)
            {
                <div class="col-md-3 col-sm-6">
                    <div class="work-thumb">
                        <a href="@link.URL" class="image-popup">
                            <img src="@String.Format("data:image/jpg;base64,{0}", Convert.ToBase64String(link.EncodedImage))" class="img-responsive" alt="Work">
                            <div class="work-info">
                                <h3>@link.DisplayName</h3>
                                <small>@link.Description</small>
                            </div>
                        </a>
                    </div>
                </div>
            }

        </div>
    </div>
    
</section>

