@model devinmajordotcom.ViewModels.ContactEmailViewModel
<html lang="en">
<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Important Email</title>

    @Styles.Render("~/Content/mediacss")

</head>

<body style="color:white;">

    <h2 style='color:lightblue;font-weight:bold;'>You've Got Mail from your Website!</h2>

    <br />
    <hr />
    <br />

    <div style='border-radius:15px;padding:10px;margin:10px;background-color:gray;'>

        <h3 style='color:lightblue;font-weight:bold;'><span class="glyphicon glyphicon-user"></span>&nbsp;From</h3>
        <p>@Model.SenderName</p>

        <br />

        <h3 style='color:lightblue;font-weight:bold;'><span class="glyphicon glyphicon-envelope"></span>&nbsp;Return Email</h3>
        <p>@Model.SenderEmailAddress</p>

        <br />

        <h3 style='color:lightblue;font-weight:bold;'><span class="glyphicon glyphicon-user"></span>&nbsp;Subject: @Model.Subject</h3>
        <p>@Model.Content</p>

    </div>

</body>
</html>